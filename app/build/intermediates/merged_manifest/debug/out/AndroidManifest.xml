<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.fotayapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- INCLUIR LOS PERMISOS PARA ACCEDER A LA CAMARA -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- INCLUIR LOS PERMISOS PARA ACCEDER AL ALMACENAMIENTO -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.FotayApp"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.project.fotayapp.activities.UploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.project.fotayapp.activities.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.project.fotayapp.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.project.fotayapp.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.project.fotayapp.activities.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.project.fotayapp.activities.TransitionActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" /> <!-- Provider foto cÃ¡mara -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.project.fotayapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path_photo" />
        </provider>
        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.project.fotayapp.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>